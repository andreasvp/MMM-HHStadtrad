{% if config %}
<div class="container" style="display: block;">
    <table class="small">
        <thead>
            <tr>
            <td style="padding: 5px;"><div style="text-align:right">
            {% if config.srShowImage %}
                <img src="https://webstorage.frontend.dbconnect.net/map/img/marker_station_cargo--hover--srhh.svg" height="50">
            {% endif %}
            <b>{{config.title}}</b></div></td>
                <td style="text-align:center; padding: 5px;" >
                {% if config.srShowImage %}
                    <img src="https://webstorage.frontend.dbconnect.net/map/img/srhh/bike.png" height="25"></br>
                {% endif %}
                <b>{{"bike" | translate}}</b></td>
                {% if config.srCargopedelec %}
                    <td style="text-align:center; padding: 5px;">
                    {% if config.srShowImage %}
                        <img src="https://webstorage.frontend.dbconnect.net/map/img/srhh/cargopedelec.png" height="25"></br>
                    {% endif %}
                    <b>{{"cargobike" | translate}}</b></td>
                {% endif %}

            </tr>
        </thead>
        <tbody>
          {% for name, item in mapValues %}
          <tr>
            <td style="text-align:right">{{ item.stationName }}</td>
            <td style="text-align:center">{{item.Fahrrad.count}}
            </td>
            {% if config.srCargopedelec %}
                <td style="text-align:center">{{item.Lastenrad.count}}
                </td>
            {% endif %}
            </tr>
          {% endfor %}
        </tbody>
    </table>
    </div>
{% else %}
    <div class="dimmed light small">{{ "LOADING" | translate }}</div>
{% endif %}
